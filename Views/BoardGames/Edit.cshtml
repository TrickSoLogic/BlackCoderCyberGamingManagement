@model BlackCoderCyberGamingManagement.Models.BoardGame

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>BoardGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BoardGameId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPlayersMin" class="control-label"></label>
                <input asp-for="NumberOfPlayersMin" class="form-control" />
                <span asp-validation-for="NumberOfPlayersMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPlayersMax" class="control-label"></label>
                <input asp-for="NumberOfPlayersMax" class="form-control" />
                <span asp-validation-for="NumberOfPlayersMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Playing_Time" class="control-label"></label>
                <input asp-for="Playing_Time" class="form-control" />
                <span asp-validation-for="Playing_Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinAge" class="control-label"></label>
                <input asp-for="MinAge" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
