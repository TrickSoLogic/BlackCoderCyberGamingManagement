@model IEnumerable<BlackCoderCyberGamingManagement.Models.BoardGame>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPlayersMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPlayersMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playing_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPlayersMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPlayersMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Playing_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BoardGameId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BoardGameId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BoardGameId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
